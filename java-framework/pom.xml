<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.theinternet</groupId>
    <artifactId>the-internet-tests</artifactId>
    <version>1.0-SNAPSHOT</version>
    <properties>
        <maven.compiler.source>19</maven.compiler.source>
        <maven.compiler.target>19</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    <dependencies>
        <!-- TestNG -->
        <dependency>
            <groupId>org.testng</groupId>
            <artifactId>testng</artifactId>
            <version>7.7.0</version>
            <scope>test</scope>
        </dependency>
        <!-- Selenium -->
        <dependency>
            <groupId>org.seleniumhq.selenium</groupId>
            <artifactId>selenium-chrome-driver</artifactId>
            <version>4.5.3</version>
        </dependency>
        <dependency>
            <groupId>org.seleniumhq.selenium</groupId>
            <artifactId>selenium-support</artifactId>
            <version>4.5.0</version>
        </dependency>
        <dependency>
            <groupId>org.seleniumhq.selenium</groupId>
            <artifactId>selenium-java</artifactId>
            <version>4.5.3</version>
        </dependency>
        <dependency>
            <groupId>io.github.bonigarcia</groupId>
            <artifactId>webdrivermanager</artifactId>
            <version>5.3.0</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.jetbrains</groupId>
            <artifactId>annotations</artifactId>
            <version>23.0.0</version>
            <scope>compile</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>2.0.7</version>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-simple</artifactId>
            <version>2.0.5</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <profiles>
        <profile>
            <id>Staging</id>
            <build>
                <defaultGoal>install</defaultGoal>
                <testResources>
                    <testResource>
                        <directory>src/test/resources</directory>
                        <filtering>true</filtering>
                    </testResource>
                </testResources>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <version>3.8.0</version>
                        <configuration>
                            <source>19</source>
                            <target>19</target>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>3.0.0-M7</version>
                        <executions>
                            <execution>
                                <phase>test</phase>
                            </execution>
                        </executions>
                        <configuration>
                            <suiteXmlFiles>
                                <!-- TestNG suite XML files -->
                                <suiteXmlFile>src/test/resources/${env.suiteXmlFile}</suiteXmlFile>
                            </suiteXmlFiles>
                            <parallel>tests</parallel>
                            <threadCount>${env.testsThreadCount}</threadCount>
                            <systemPropertyVariables>
                                <theInternetWebsite.baseUrl>${env.testRunnerAppAddress}</theInternetWebsite.baseUrl>
                                <theInternetWebsite.baseUrlSG>${env.webAppAddress}</theInternetWebsite.baseUrlSG>
                                <theInternetWebsite.seleniumGridUrl>${env.seleniumGridAddress}</theInternetWebsite.seleniumGridUrl>
                                <theInternetWebsite.useSeleniumGrid>${env.useSeleniumGrid}</theInternetWebsite.useSeleniumGrid>>
                                <theInternetWebsite.headlessBrowser>${env.headlessBrowser}</theInternetWebsite.headlessBrowser>
                                <theInternetWebsite.browser>${env.browser}</theInternetWebsite.browser>
                                <theInternetWebsite.browserVersion>${env.browserVersion}</theInternetWebsite.browserVersion>
                            </systemPropertyVariables>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>CLI_Parameters</id>
            <build>
                <defaultGoal>install</defaultGoal>
                <testResources>
                    <testResource>
                        <directory>src/test/resources</directory>
                        <filtering>true</filtering>
                    </testResource>
                </testResources>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <version>3.8.0</version>
                        <configuration>
                            <source>19</source>
                            <target>19</target>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>3.0.0-M7</version>
                        <executions>
                            <execution>
                                <phase>test</phase>
                            </execution>
                        </executions>
                        <configuration>
                            <suiteXmlFiles>
                                <!-- TestNG suite XML files -->
                                <suiteXmlFile>src/test/resources/${suiteXmlFile}</suiteXmlFile>
                            </suiteXmlFiles>
                            <parallel>tests</parallel>
                            <threadCount>${testsThreadCount}</threadCount>
                            <systemPropertyVariables>
                                <theInternetWebsite.baseUrl>${webAppAddress}</theInternetWebsite.baseUrl>
                                <theInternetWebsite.baseUrlSG>${testRunnerAddress}</theInternetWebsite.baseUrlSG>
                                <theInternetWebsite.seleniumGridUrl>${seleniumGridAddress}</theInternetWebsite.seleniumGridUrl>
                                <theInternetWebsite.useSeleniumGrid>${useSeleniumGrid}</theInternetWebsite.useSeleniumGrid>>
                                <theInternetWebsite.headlessBrowser>${headlessBrowser}</theInternetWebsite.headlessBrowser>
                                <theInternetWebsite.browser>${browser}</theInternetWebsite.browser>
                                <theInternetWebsite.browserVersion>${browserVersion}</theInternetWebsite.browserVersion>
                            </systemPropertyVariables>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <id>LocalExecution</id>
            <build>
                <defaultGoal>install</defaultGoal>
                <testResources>
                    <testResource>
                        <directory>src/test/resources</directory>
                        <filtering>true</filtering>
                    </testResource>
                </testResources>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <version>3.8.0</version>
                        <configuration>
                            <source>19</source>
                            <target>19</target>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>3.0.0-M7</version>
                        <executions>
                            <execution>
                                <phase>test</phase>
                            </execution>
                        </executions>
                        <configuration>
                            <suiteXmlFiles>
                                <!-- TestNG suite XML files -->
                                <suiteXmlFile>src/test/resources/regression.xml</suiteXmlFile>
                            </suiteXmlFiles>
                            <parallel>tests</parallel>
                            <threadCount>4</threadCount>
                            <systemPropertyVariables>
                                <theInternetWebsite.baseUrl>http://0.0.0.0:7080</theInternetWebsite.baseUrl>
                                <theInternetWebsite.baseUrlSG>http://192.168.65.2:7080</theInternetWebsite.baseUrlSG>
                                <theInternetWebsite.seleniumGridUrl>http://0.0.0.0:4444/wd/hub</theInternetWebsite.seleniumGridUrl>
                                <theInternetWebsite.useSeleniumGrid>false</theInternetWebsite.useSeleniumGrid>>
                                <theInternetWebsite.headlessBrowser>true</theInternetWebsite.headlessBrowser>
                                <theInternetWebsite.browser>chrome</theInternetWebsite.browser>
                                <theInternetWebsite.browserVersion>''</theInternetWebsite.browserVersion>
                            </systemPropertyVariables>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>LocalSGExecution</id>
            <build>
                <defaultGoal>install</defaultGoal>
                <testResources>
                    <testResource>
                        <directory>src/test/resources</directory>
                        <filtering>true</filtering>
                    </testResource>
                </testResources>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-compiler-plugin</artifactId>
                        <version>3.8.0</version>
                        <configuration>
                            <source>19</source>
                            <target>19</target>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>3.0.0-M7</version>
                        <executions>
                            <execution>
                                <phase>test</phase>
                            </execution>
                        </executions>
                        <configuration>
                            <suiteXmlFiles>
                                <!-- TestNG suite XML files -->
                                <suiteXmlFile>src/test/resources/regression.xml</suiteXmlFile>
                            </suiteXmlFiles>
                            <parallel>tests</parallel>
                            <threadCount>4</threadCount>
                            <systemPropertyVariables>
                                <theInternetWebsite.baseUrl>http://0.0.0.0:7080</theInternetWebsite.baseUrl>
                                <theInternetWebsite.baseUrlSG>http://192.168.65.2:7080</theInternetWebsite.baseUrlSG>
                                <theInternetWebsite.seleniumGridUrl>http://0.0.0.0:4444/wd/hub</theInternetWebsite.seleniumGridUrl>
                                <theInternetWebsite.useSeleniumGrid>true</theInternetWebsite.useSeleniumGrid>>
                                <theInternetWebsite.headlessBrowser>false</theInternetWebsite.headlessBrowser>
                                <theInternetWebsite.browser>chrome</theInternetWebsite.browser>
                                <theInternetWebsite.browserVersion>''</theInternetWebsite.browserVersion>
                            </systemPropertyVariables>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
    <reporting>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-report-plugin</artifactId>
                <version>3.0.0-M7</version>
            </plugin>
        </plugins>
    </reporting>
</project>